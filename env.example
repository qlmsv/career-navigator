# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI providers (at least one required)
# Get from Google AI Studio: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Get from OpenAI: https://platform.openai.com/api-keys  
OPENAI_API_KEY=

# Get from Groq: https://console.groq.com/keys
GROQ_API_KEY=

# LLM Configuration
PREFERRED_LLM=groq
GROQ_MODEL=llama-3.1-70b-versatile

# Security
# Generate strong secrets: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-here-different-from-jwt

# Application URL (production)
NEXT_PUBLIC_APP_URL=https://your-app.onrender.com

# Monitoring (optional)
# Get from Sentry.io
SENTRY_DSN=

# Environment 
NODE_ENV=development
DEBUG=false

# Security Headers (production)
CSP_REPORT_URI=https://your-app.report-uri.com/r/d/csp/enforce

